<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.stbl.demo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AlbumActivity" />
        <activity android:name=".activity.SampleSizeActivity" />
        <activity
            android:name=".activity.NoteActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".activity.NoteListActivity" />
        <activity
            android:name=".activity.RefreshActivity"
            android:theme="@style/NoActionBar" />
    </application>

</manifest>